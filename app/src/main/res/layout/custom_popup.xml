<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="#2B8ADE"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Untuk selanjutnya, selesaikan pembayaran dengan cara mentransfer ke rekening "
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="no rek 07995544 BNI A.N Ilham "
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Bukti pembayaran dapat dikirimkan melalui no wa dibawah"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="081234567890"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_popup"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="OK"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>

</LinearLayout>