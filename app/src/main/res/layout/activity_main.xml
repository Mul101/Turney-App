<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="sans-serif-black"-->
<!--            android:text="HOME" />-->

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profile_card"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_member_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_toStartOf="@id/cv_profile_pic"
                    android:fontFamily="sans-serif-medium"
                    android:text="SILVER MEMBER"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_member_info"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_toStartOf="@id/cv_profile_pic"
                    android:fontFamily="sans-serif-medium"
                    android:text="Mr.Xroy" />

                <TextView
                    android:id="@+id/tv_id_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_username"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"
                    android:text="ID:000214356"
                    android:textColor="#5C5861"
                    android:textSize="10sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_profile_pic"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_member_info"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_launcher_background" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_achievement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_profile_pic"
                    android:layout_marginStart="235dp"
                    android:layout_marginTop="10dp"
                    android:text="20/100"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_profile_pic"
                    android:layout_alignTop="@id/tv_achievement"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-2dp"
                    android:layout_toRightOf="@id/tv_achievement"
                    android:src="@drawable/ic_baseline_stars_24" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_featured_events"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="15dp"
            android:scrollbars="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/featured_event_list"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_list_event"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/event_img" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-medium"
                android:text="E V E N T"
                android:textColor="@color/white"
                android:textSize="40sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_list_scrim"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gaming_tournaments" />

            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="S C R I M"
                android:textColor="@color/white"
                android:textSize="40sp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</ScrollView>







